<Window x:Class="WarehouseTrackingWpf.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseTrackingWpf"
        mc:Ignorable="d"
        Title="Giriş Yap" Height="750" Width="750" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#1E1E2F" >    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF101337" CornerRadius="0,15,15,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Warehouse" FontSize="32" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,0,10" />
                <TextBlock Text="Takip Sistemi" FontSize="18" Foreground="White" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="15,0,0,15" Padding="40" >
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Giriş Yap" FontSize="26" FontWeight="Bold" Foreground="#333" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <TextBlock Text="Kullanıcı Adı" FontWeight="SemiBold" Foreground="#555" />
                <Border Background="#F4F4F4" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="0,5,0,15">
                    <TextBox Height="35" Padding="10" FontSize="14" Background="Transparent" BorderThickness="0"/>
                </Border>

                <TextBlock Text="Şifre" FontWeight="SemiBold" Foreground="#555" />
                <Border Background="#F4F4F4" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="0,5,0,25">
                    <PasswordBox Height="35" Padding="10" FontSize="14" Background="Transparent" BorderThickness="0"/>
                </Border>

                <Button Content="Giriş Yap" Height="40" Background="#2D2F51" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Stretch" Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>



                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Kayıt Ol"
               Foreground="#2D2F51"
               FontSize="12"
               HorizontalAlignment="Left"
               Cursor="Hand"
               Grid.Column="0" />

                    <TextBlock Text="|" 
               FontSize="12" 
               Foreground="#2D2F51"
               Grid.Column="1"
               HorizontalAlignment="Center" />

                    <TextBlock Text="Şifreni mi unuttun?"
               Foreground="#2D2F51"
               FontSize="12"
               HorizontalAlignment="Right"
               Cursor="Hand"
               Grid.Column="2" />
                </Grid>


            </StackPanel>
        </Border>
    </Grid>
</Window>
